{
  "compilerOptions": {
    "target": "es6", // or "es2015" or higher
    "lib": ["es2015", "dom"], // Add "dom" for browser compatibility
    "strict": true, // Optional: enables all strict type checking options
    "module": "commonjs", // Choose appropriate module format
    "outDir": "./dist", // Output directory for compiled files
    "esModuleInterop": true // Enables emit interoperability between CommonJS and ES Modules
  },
  "include": ["*.ts"], // Adjust as necessary to include your TypeScript files
  "exclude": ["node_modules"]
}
